<%= render "shared/header" %>
<div class="search-main">
<%= search_form_for @q, url: search_hobbies_path, html: { id: "detailed-search-form" } do |f| %>
   <div class="seach-content">
    <div class="search-field">
      <%= f.text_field :nickname_cont, placeholder: 'ユーザー名' %>
    </div>
    <%= f.submit '検索' %>
  <% end %>
  <% if params[:q].present? %>
<% if @users.present? %>
  <ul class="user-list">
    <% @users.each do |user| %>
      <li>
        <%= link_to user.nickname, user_path(user), class: "search-user"%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>該当するユーザーはいません。</p>
<% end %>
<% end %>
</div>


</div>

<%= render "shared/footer" %>