<%= render 'shared/second-header' %>

<div class="posts-main">
<div class="sign_up_title">
<h2>
投稿
</h2>
</div>
  <%= form_with model: @hobby, url: hobbies_path, class: 'form', local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>
    <div class="form-list">
     <div class="form-content">
      <ul >
      <li>
        <%= f.label :日付, class: 'lavel' %> <br >
        <%= f.date_field :date, class: 'select' %>
      </li>
      <li>
        <%= f.label :ジャンル, class: 'lavel' %><br >
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: "select"}) %>
      </li>
      <li>
        <%= f.label :時間, class: 'lavel' %><br >
        <%= f.number_field :time, in: 0.1..20.0, step: 0.1, class: "time-select" %>
      </li>
      <li>
        <%= f.label :コメント, class: 'lavel' %><br >
        <%= f.text_area :activity, class: 'text-input' %>
      </li>
      </ul>
      </div>
      <%= f.submit '投稿', class: 'submit'%>
    </div>
  <% end %>
  
</div>

<%= render "shared/footer" %>
