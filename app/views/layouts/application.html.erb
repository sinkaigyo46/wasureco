<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/google_analytics' %>
    <title>わすレコ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= favicon_link_tag('re.ico')%>
    <link href="<%= image_path("apple.touch.png") %>" rel="apple-touch-icon" sizes="180x180" type="image/png" />
    <link href="<%= image_path("apple.touch.png") %>" rel="icon" sizes="192x192" type="image/png" />
    <%= javascript_importmap_tags %>
  </head>

  <body>

<% if !user_signed_in? && !cookies[:loader_displayed] %>
  <div id="loader">
    <div class="spinner">
      <div class="bounce1"></div>
      <div class="bounce2"></div>
      <div class="bounce3"></div>
    </div>
  </div>
  <% cookies[:loader_displayed] = { value: "true", expires: 5.minutes.from_now } %>
<% end %>
   <%= breadcrumbs separator: " &rsaquo; " %>   
    <%= yield %>
  </body>
</html>
